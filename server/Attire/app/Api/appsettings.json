{
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {"Name": "Console"},
      {
        "Name": "File",
        "Args": {
          "path": "/logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "Issuer": "attire.server",
    "Audience": "attire.client"
  }
}
